version: '3.8'

services:
  db:
    image: mysql:8.0  # Puedes cambiar a 'latest' o una versión específica como '5.7'
    container_name: mi_mysql_container
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: tu_password_secreto
      MYSQL_DATABASE: nombre_de_tu_bd
      MYSQL_USER: usuario_dev
      MYSQL_PASSWORD: password_dev
    ports:
      - "3306:3306" # Mapea el puerto 3306 de tu PC al 3306 del contenedor
    volumes:
      - ./mysql_data:/var/lib/mysql # ¡Vital! Esto guarda los datos en tu carpeta local